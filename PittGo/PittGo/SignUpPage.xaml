<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            Title=" Sign Up Page"
             x:Class="PittGo.SignUpPage"
             BackgroundImage="background.jpeg">
    <ContentPage.Content>
        <StackLayout
        
        VerticalOptions="CenterAndExpand"
        Spacing="5"
        Padding="20">

            <Image Source="createaccounticon.jpg"
                   HeightRequest="200"/>
            <Entry x:Name="email"
               Placeholder="Email"/>

            <Entry x:Name="password"
                   IsPassword="True"
               Placeholder="Password"/>

            <Button x:Name="UpdateButton" 
                Text="Go!"
                Clicked="UpdateButton_Clicked"
         TextColor="White"                
         BackgroundColor="Red"/>
            

        </StackLayout>
    </ContentPage.Content>
</ContentPage>