<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PittGo.institutionpage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Institutions" />
           

        </StackLayout>
        <ListView x:Name="whatareyoulookingforListView"
                  HasUnevenRows="True"/>
        <ListView.ItemTemplete>
            <DataTemplate>
                <ViewCell>
                    <stackLayout padding="15">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="*"/>
                                
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefination Width="50"/>
                                <ColumnDefinition Width="*"/>
                                
                            </Grid.ColumnDefinitions>
                            <Image WidthRequest="50"
            HeightRequest="50"
            Source="{}"
            Grid.Row="0"
            Grid.Column="0"
            Grid.RowSpan="2"/>
                            <Label Text="{Restaurants}"
                    FontAttributes="Bold"
                    FontSize="Large"
                    Grid.Row="0"
                    Grid.Column="1"/>
                            <Label Text="{Indian Food}"
                             Grid.Row="1"
                                   Grid.Column="1"/>

                        </Grid>
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplete>

    </ContentPage.Content>
</ContentPage>